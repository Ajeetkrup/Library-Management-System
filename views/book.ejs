<h1>Library Management System / <%= title %></h1>

<h1>All Books</h1>

<table>
        <tr>
            <th>Book Name</th>
            <th>Book Author</th>
            <th>Book Pages</th>
            <th>Book Price</th>
            <th>Book Copies</th>
            <th>Book Availability</th>
            <th>Issue</th>
            <th>Return</th>
            <th>Delete</th>
        </tr>     
        <% books.forEach(book => { %>
            <tr>
                <td>
                    <%= book.name %>
                </td>
                <td>
                    <%= book.author %>
                </td>
                <td>
                    <%= book.pages %>
                </td>
                <td>
                    <%= book.price %>
                </td>
                <td>
                    <%= book.copies %> <br>
                </td>
                <td>
                    <% if(book.available == true){ %>
                        <p>Yes</p>
                    <%}else{%>
                        <p>No</p>
                    <% } %>
                </td>
                <td>
                    <form action="/books/issue %>" method="post">
                        <input type="text" style="display: none;" 
                               name="name" 
                               value="<%= book.name %>">
                        <button type="submit">Issue</button>
                    </form>
                </td>
                <td>
                    <form action="/books/return" method="post">
                        <input type="text" style="display: none;" 
                               name="name" 
                               value="<%= book.name %>">
                        <button type="submit">Return</button>
                    </form>
                </td>
                <td>
                    <form action="/books/delete" method="post">
                        <input type="text" style="display: none;" 
                               name="name" 
                               value="<%= book.name %>">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
            <% }) %>
</table> 

<h1>Add Books</h1>

<form action="/books/create" method="post">
    <input type="text" placeholder="Book Name" name="name">
    <input type="text" placeholder="Book Author" name="author">
    <input type="text" placeholder="Book Pages" name="pages">
    <input type="text" placeholder="Book Price" name="price">
    <input type="text" placeholder="Book Copies" name="copies">
    <button type="submit">Add Book</button>
</form>